<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallpapers para Smart TV</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
        }
        .gallery {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .image-container {
            margin: 10px;
        }
        img {
            width: 300px;
            height: auto;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0,0,0,0.2);
        }
        .download-btn {
            display: block;
            margin-top: 5px;
            padding: 5px 10px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <h1>Wallpapers para Smart TV</h1>
    <div class="gallery" id="gallery"></div>

    <script>
        // Lista das imagens (substitua pelos nomes exatos dos arquivos do seu repositÃ³rio)
        const imagens = [
            "wallpaper1.jpg",
            "wallpaper2.jpg",
            "wallpaper3.jpg"
        ];

        const repoURL = "https://raw.githubusercontent.com/Joaozim0/Wallpaper-smart-TV/main/";

        const gallery = document.getElementById("gallery");

        imagens.forEach(img => {
            const div = document.createElement("div");
            div.classList.add("image-container");

            const image = document.createElement("img");
            image.src = repoURL + img;
            image.alt = "Wallpaper";

            const downloadLink = document.createElement("a");
            downloadLink.href = repoURL + img;
            downloadLink.download = img;
            downloadLink.textContent = "Baixar";
            downloadLink.classList.add("download-btn");

            div.appendChild(image);
            div.appendChild(downloadLink);
            gallery.appendChild(div);
        });
    </script>

</body>
</html>
